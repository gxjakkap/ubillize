{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ESNext",
        "moduleResolution": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"]
  }